@{
    ViewData["Title"] = "Invite User";
}
<h1>@ViewBag.Title</h1>
<form asp-controller="Account" asp-action="Invite">
    <div class="form-group">
        <label for="email">Invite a user for the following email address:</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Email address">
    </div>
    <div class="form-group">
        <label for="validDays">The invitation is valid for this many days:</label>
        <input type="number" class="form-control" id="validDays" name="validDays" value="30">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (@ViewData["AuthenticationRequestUrl"] != null)
{
    <div class="mt-3">
        <p>Use the following URL to allow <code>@ViewData["Email"]</code> to register an account:</p>
        <code>@ViewData["AuthenticationRequestUrl"]</code>
    </div>
}